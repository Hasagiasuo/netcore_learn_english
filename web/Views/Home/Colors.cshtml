
@{
    ViewData["Title"] = "Colors";
}

@model string

<!DOCTYPE html>
<html>
<head>
    <title>File Content</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }

        h1 {
            color: #333;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        pre {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 5px;
            overflow-x: auto;
            white-space: pre-wrap; /* Allows long lines to wrap */
            word-wrap: break-word; /* Prevents overflow */
            font-size: 16px;
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <h1>Colors directory:</h1>
    <pre>@Model</pre>  <!-- This will display the file content passed from the controller -->
</body>
</html>
