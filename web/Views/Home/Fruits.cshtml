@model string[]
@{
    ViewData["Title"] = "Fruits";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
   <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }

        h2 {
            color: #333;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            font-size: 16px;
            line-height: 1.5;
        }

        form {
            margin-top: 20px;
        }

        input[type="text"],
        input[type="file"] {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-right: 10px;
            display: block; /* Ensure inputs are on separate lines */
            width: calc(100% - 22px); /* Adjust for padding and border */
            box-sizing: border-box; /* Include padding and border in the element’s total width and height */
        }

        input[type="file"] {
            margin-bottom: 10px; /* Space between file input and other elements */
        }

        button {
            padding: 10px 15px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            color: #fff;
            background-color: #333;
            cursor: pointer;
        }

            button:hover {
                background-color: #555;
            }

        .form-group-t {
            margin-bottom: 15px;
            text-align: center;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

    </style>
</head>
<body>
    <h2>@ViewData["Title"]</h2>

    <ul>
        @foreach (var item in Model)
        {
            <li>@item</li>
        }
    </ul>

    <form method="post" asp-action="AddFruit">
        <input type="text" name="newFruit" placeholder="Enter new fruits" />
        <button type="submit">Add Fruit</button>
    </form>

    <form method="post" asp-action="DeleteFruit">
        <input type="text" name="fruitToDelete" placeholder="Enter fruits to delete" />
        <button type="submit">Delete Fruit</button>
    </form>
    <div class="button-container">
        <form asp-controller="Home" asp-action="UploadFile" method="post" enctype="multipart/form-data">
            <div class="form-group-t">
                <label for="fileName">File Name must be: "Слово англійською.jfif"</label>
            </div>
            <div class="form-group">
                <label for="file">Select file:</label>
                <input type="file" id="file" name="file" required />
            </div>
            <button type="submit">Upload</button>
        </form>
    </div>
</body>
</html>
