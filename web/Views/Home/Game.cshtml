@{
    Layout = null; // We don't want to include the default layout
    ViewData["Title"] = "Magic Words Adventure";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Magic Words Adventure</title>

    <!-- Linking to style.css in wwwroot/css -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">

    <!-- GOOGLE FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="loader-wrapper">
        <div class="loader">loading...</div>
    </div>

    <div class="container" style="display:none;">
        <div class="side-text">Magic Words Adventure</div>
        <div class="game-area">
            <div class="start-screen">
                <h1>Collect the word</h1>
                <div class="word-input-container">
                    <input type="text" id="word-input" value="Apple" size="6">
                </div>
                <div class="start-btn-container">
                    <button id="start-btn">Start</button>
                </div>
            </div>

            <div class="game-container" style="display:none;">
                <div id="character"></div>
                <div id="health">Health: 5</div>
                <div id="score">Word: </div>
            </div>

            <div class="end-screen" style="display:none;">
                <h1 id="end-message"></h1>
                <button id="restart-btn">Restart</button>
            </div>

            <div class="pause-screen" style="display:none;">
                <h1>Ви ще тут?</h1>
                <button id="resume-btn">Продовжити</button>
            </div>
        </div>
        <div class="side-text">Magic Words Adventure</div>
    </div>

    <!-- Linking to game.js in wwwroot/js -->
    <script src="~/js/game.js" asp-append-version="true"></script>

    <!-- Initialize the game (this script can be in game.js or inline) -->
    <script>
        set_target_word("apple");
    </script>
</body>
</html>
