@{
    ViewData["Title"] = "Admin Panel";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }

        h1 {
            color: #333;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
            margin-bottom: 40px;
            font-size: 2em;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .col {
            flex: 1;
            max-width: 200px;
            margin: 10px;
            text-align: center;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #333;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
        }

            .btn:hover {
                background-color: #555;
            }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1>@ViewData["Title"]</h1>

        <div class="row">
            <div class="col">
                <a href="/home/Fruits" class="btn">Fruits</a>
            </div>
            <div class="col">
                <a href="/home/Weather" class="btn">Weather</a>
            </div>
            <div class="col">
                <a href="/home/Colors" class="btn">Colors</a>
            </div>
            <div class="col">
                <a href="/home/Animals" class="btn">Animals</a>
            </div>
        </div>
    </div>
</body>
</html>
