@{
    ViewData["Title"] = "Статистика";
}

<h2>Статистика</h2>

<div class="progress">
    <div class="progress-bar" role="progressbar" style="width: @ViewBag.LearnedPercentage%;" aria-valuenow="@ViewBag.LearnedPercentage" aria-valuemin="0" aria-valuemax="100">
        @ViewBag.LearnedPercentage%
    </div>
</div>

<p>Вивчено слів: @ViewBag.LearnedPercentage%</p>
<p>Залишилося: @ViewBag.RemainingPercentage%</p>

<h3>Останні дії:</h3>
@if (ViewBag.LastActions != null && ViewBag.LastActions.Any())
{
    <ul>
        @foreach (var action in ViewBag.LastActions)
        {
            <li>@action</li>
        }
    </ul>
}
else
{
    <p>Немає записаних дій.</p>
}

<a asp-action="Index" class="btn btn-secondary">На головну</a>
